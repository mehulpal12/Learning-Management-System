

generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  role      Role     @default(STUDENT)
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  INSTRUCTOR
  STUDENT
}

